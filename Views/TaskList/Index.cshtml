@model List<UserTask>
@{
    ViewData["Title"] = "TaskList";
}

<h1>TaskList</h1>
<table class="table-bordered">
    <tr>
        <th>Description</th>
        <th>Due Date</th>
        <th>Is Complete</th>
        <th colspan="2">Actions</th>
    </tr>
    @foreach (UserTask task in Model)
    {
        <tr>
            <td>@task.Description</td>
            <td>@task.DueDate</td>
            <td>@task.IsComplete</td>
            @* url action creates absolute urls when given method name and controller name *@
            <td><a href="@Url.Action("Edit", "TaskList", new { taskId = task.Id })">Edit</a></td>
            <td><a href="@Url.Action("Delete", "TaskList", new { taskId = task.Id })">Delete</a></td>
        </tr>
    }
</table>

